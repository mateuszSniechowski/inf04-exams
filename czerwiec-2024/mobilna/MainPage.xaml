<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GraKosciMobilna.MainPage">

    <VerticalStackLayout BackgroundColor="Beige">
        <Label Text="Gra w kości"
               BackgroundColor="Brown"
               TextColor="White"
               Padding="10, 10, 0, 10"
               FontSize="Large"
               Margin="0, 10, 0, 10"/>

        <Button Text="RZUĆ KOŚĆMI"
                Clicked="OnThrowButtonClicked"
                BackgroundColor="Chocolate"
                HorizontalOptions="Center"
                Padding="10"
                Margin="0, 10, 0, 0"/>

        <HorizontalStackLayout Spacing="10"
                               BackgroundColor="White"
                               HorizontalOptions="FillAndExpand"
                               Padding="10"
                               Margin="0, 20, 0, 20">
            <Image x:Name="firstImg"
                   Source="question.jpg"
                   HeightRequest="65"/>
            <Image x:Name="secondImg"
                   Source="question.jpg"
                   HeightRequest="65"/>
            <Image x:Name="thirdImg"
                   Source="question.jpg"
                   HeightRequest="65"/>
            <Image x:Name="fourthImg"
                   Source="question.jpg"
                   HeightRequest="65"/>
            <Image x:Name="fifthImg"
                   Source="question.jpg"
                   HeightRequest="65"/>
        </HorizontalStackLayout>

        <Label x:Name="gamePointsLbl"
               Text="Wynik tego losowania: 0"
               HorizontalOptions="Center"
               Padding="10"/>
        
        <Label x:Name="gameScoreLbl"
               Text="Wynik gry: 0"
               HorizontalOptions="Center"
               Padding="10"
               Margin="0, 0, 0, 10"/>

        <Button Text="RESTUJ WYNIK"
                Clicked="OnResetButtonClicked"
                BackgroundColor="Chocolate"
                HorizontalOptions="Center"
                Padding="10" />
    </VerticalStackLayout>

</ContentPage>
